{% extends 'SchWlBundle::authorized.html.twig' %}

{% block head_extend %}
    <!-- <link href="{{ asset("bundles/schwl/css/addwish.css") }}" rel="stylesheet"> -->
{% endblock head_extend %}

{% block nav_wish_class %}active{% endblock %}

{% block content %}

    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        {{ form_errors(form) }}
    </div>

    <form action="{{ path('sch_wl_wish_create') }}" method="post" {{ form_enctype(form) }}>
        <div class="form-group">
            {{ form_label(form.title, 'Titre', { 'attr': {'class': 'form-control'} }) }}
            {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}

            {{ form_label(form.description, 'Description', { 'attr': {'class': 'form-control'} }) }}
            {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.category, 'Cat√©gorie', { 'attr': {'class': 'form-control'} }) }}
            {{ form_widget(form.category, { 'attr': {'class': 'form-control'} }) }}
        </div>
        {{ form_rest(form) }}
        <button class="btn btn-default btn-success btn-block" type="submit">Ajouter</button>
    </form>

    <ul class="record_actions">
        <li>
            <a href="{{ path('sch_wl_wish_index') }}">
                Back to the list
            </a>
        </li>
    </ul>
{% endblock %}
