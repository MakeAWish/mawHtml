{% extends 'SchWlBundle::authorized.html.twig' %}

{% block nav_admin_class %}active{% endblock %}

{% block content %}
    <h1>Category list</h1>

    <table class="records_list">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Weight</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('sch_wl_category_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.weight }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('sch_wl_category_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('sch_wl_category_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('sch_wl_category_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
