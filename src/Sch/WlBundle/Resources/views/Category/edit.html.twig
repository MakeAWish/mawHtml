{% extends 'SchWlBundle::authorized.html.twig' %}

{% block nav_admin_class %}active{% endblock %}

{% block content %}
    <h1>Category edit</h1>

    <form action="{{ path('sch_wl_category_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('sch_wl_category_index') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('sch_wl_category_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
